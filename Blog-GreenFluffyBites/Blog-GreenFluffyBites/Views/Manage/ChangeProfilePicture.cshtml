@model Blog_GreenFluffyBites.Models.Profile
@{
    ViewBag.Title = "ChangePicture";
}

@using (Html.BeginForm("ChnageProfilePicture", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    <div class="row" style="padding-top:30px">
        <div class="col-sm-2 col-sm-offset-4">

            <img src="@Url.Action("DisplayProfilePicture", "Home" )" style="width:160px;height:160px; background: #FFFFFF;
                                      margin: auto;
                                      -moz-border-radius: 60px;
                                      border-radius: 10px;
                                      padding: 5px;
                                      box-shadow: 0px 0px 20px #888;" />
        </div>
    </div>

    <div class="row col-sm-offset-4 marginTop">
        <div class="form-group col-sm-4" id="Profile">
            @Html.LabelFor(m => m.ProfilePicture, new { @class = "col-sm-12 label-ProfilePicture" })
            <div class="col-sm-6">
                <label class="btn btn-default btn-file" onclick="document.getElementById('myBox').style.display='inline-block';">
                    Browse <input type="file" name="ProfilePicture" id="fileUpload" accept=".png,.jpg,.jpeg,.gif,.tif" style="display: none;" />
                </label>
                <span id="myBox" style="display:none">File chosen, please upload</span>
            </div>

            <div class="col-sm-2">
                <input type="submit" value="Upload" class="btn btn-default" onclick="document.getElementById('myBox').style.display='none';" />
            </div>

        </div>
    </div>
}
